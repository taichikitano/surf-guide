<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "guides/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :name_kana, "ふりがな" %><br />
    <%= f.text_field :name_kana %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :sex_id, "性別" %><br />
    <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box"}) %>
  </div>

  <div class="field">
    <%= f.label :age, "年齢" %><br />
    <%= f.text_field :age %>
  </div>

  <div class="field">
    <%= f.label :history_id, "サーフィン歴" %><br />
    <%= f.collection_select(:history_id, History.all, :id, :name, {}, {class:"select-box"}) %>
  </div>

  <div class="field">
    <%= f.label :style_id, "サーフスタイル" %><br />
    <%= f.collection_select(:style_id, Style.all, :id, :name, {}, {class:"select-box"}) %>
  </div>

  <div class="field">
    <%= f.label :home_point, "ホームポイント" %><br />
    <%= f.text_field :home_point %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  
<% end %>

<%= render "guides/shared/links" %>
